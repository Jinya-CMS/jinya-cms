root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = 120
tab_width = 4

[*.js]
tab_width = 2
indent_size = 2
insert_final_newline = true

[*.json]
tab_width = 2
indent_size = 2
insert_final_newline = true

[*.php]
insert_final_newline = true

[*.phtml]
insert_final_newline = true
