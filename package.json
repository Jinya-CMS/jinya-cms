{
  "name": "jinya-cms",
  "version": "26.0.12",
  "description": "Jinya Gallery CMS",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jinya-CMS/jinya-cms.git"
  },
  "author": "Jinya Developers",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Jinya-CMS/jinya-cms/issues"
  },
  "type": "module",
  "scripts": {
    "designer:prettier": "prettier public/designer/js --check",
    "designer:eslint": "eslint -c eslint.config.cjs public/designer/js/ public/designer/lang/",
    "designer:stylelint": "stylelint public/designer/**/*.css",
    "designer:format": "prettier public/designer/js --write",
    "designer:lint": "bun run designer:prettier && bun run designer:eslint && designer:stylelint",
    "installer:prettier": "prettier public/installer --check",
    "installer:eslint": "eslint -c eslint.config.cjs public/installer/",
    "installer:stylelint": "stylelint public/installer/**/*.css --fix",
    "installer:format": "prettier public/installer --write"
  },
  "homepage": "https://jinya.de",
  "devDependencies": {
    "@eslint/js": "9",
    "eslint": "9",
    "eslint-config-prettier": "10",
    "globals": "16",
    "prettier": "3",
    "stylelint": "16",
    "stylelint-config-standard": "38"
  }
}
